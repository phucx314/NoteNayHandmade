<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_marginTop="20dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="right"
                    android:src="@drawable/png_profilepic"
                    app:shapeAppearanceOverlay="@style/corner"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0sp"
                        android:text="Welcome"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:text="email@email.com"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/regular"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/bold"
        android:textSize="30sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/green"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/opt_theme"
        app:cardBackgroundColor="?attr/colorSecondary">

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="Theme"
                    android:fontFamily="@font/bold"
                    android:textColor="?attr/colorOnBackground"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/mode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/tv_statusTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You choose Default (Dark)"
                android:fontFamily="@font/regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTertiary"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/opt_logout"
        app:cardBackgroundColor="?attr/colorSecondary"
        >

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tv_logoutaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Logout"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/bold"
                />

            <TextView
                android:id="@+id/tv_logoutstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout to save your data"
                android:fontFamily="@font/regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTertiary"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="?attr/colorSecondary"
        android:id="@+id/opt_trash">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tv_trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Trash"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/bold"
                />

            <TextView
                android:id="@+id/tv_trashitemcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Nothing in your Trash"
                android:textColor="?attr/colorTertiary"
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_clonedata"
        app:cardBackgroundColor="?attr/colorSecondary"
        >

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tv_clonedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Clone"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/bold"
                />

            <TextView
                android:id="@+id/tv_clonedatastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clone your data from cloud"
                android:fontFamily="@font/regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTertiary"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_uploaddata"
        app:cardBackgroundColor="?attr/colorSecondary"
        >

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/tv_uploaddata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Upload"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/bold"
                />

            <TextView
                android:id="@+id/tv_uploaddatastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload your data to cloud"
                android:fontFamily="@font/regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTertiary"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>