<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="right"
        android:src="@color/green"
        />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:fontFamily="@font/bold"
        android:textSize="30sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/green"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/opt_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        >

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Theme"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_statusTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You choose Default (Dark)"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:textColor="@color/grey_light"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/opt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:id="@+id/tv_manageaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Login"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            />

        <TextView
            android:id="@+id/tv_accountstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to save your data"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:textColor="@color/grey_light"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:id="@+id/opt_trash"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:id="@+id/tv_trash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Trash"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            />

        <TextView
            android:id="@+id/tv_trashitemcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nothing in your Trash"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:textColor="@color/grey_light"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>